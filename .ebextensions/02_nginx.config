files:
  /etc/nginx/conf.d/elasticbeanstalk/django.conf:
    mode: "000644"
    owner: root
    group: root
    content: |
      upstream django {
          server 127.0.0.1:8000;
          keepalive 64;
      }

      server {
          listen 80;
          client_max_body_size 50M;

          location / {
              proxy_pass http://django;
              proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
              proxy_set_header Host $host;
              proxy_set_header X-Forwarded-Proto $scheme; # ENVIA O HEADER NECESSÁRIO PARA O DJANGO
              proxy_set_header X-Real-IP $remote_addr; # Ajuda na identificação do cliente
          }

          # Configuração para arquivos estáticos (se não usar S3)
          location /static {
              alias /var/app/current/staticfiles;
              expires 30d;
          }
      }